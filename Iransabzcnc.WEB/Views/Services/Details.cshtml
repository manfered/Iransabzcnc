@model Iransabzcnc.Entities.CompanyService


@{
    ViewBag.Title = Model.Title + " IranSabz-CNC.com";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="row">

    <section class="seperate-pages-container">

        <!-- sending mvc url id to angularjs controller -->
        @*<input type="hidden" id="serviceId" ng-model="serviceId" ng-init="serviceId=@ViewBag.serviceId" />*@

        <article>
            <section>
                <div class="row section-title-header"><h1>@Model.Title</h1></div>
                @Html.Raw(Model.FullDescription)
            </section>
        </article>

        <div>

            <!-- ### start of the gallery definition ### -->
            <div id="nanogallery2" data-nanogallery2='{
                                                      "thumbnailHeight":           200,
                                                      "thumbnailWidth":            200,
                                                      "galleryMosaic":             [
                                                                                     { "w": 5, "h": 3, "c": 2, "r": 1 },
                                                                                     { "w": 2, "h": 2, "c": 1, "r": 2 },
                                                                                     { "w": 2, "h": 2, "c": 7, "r": 2 },
                                                                                     { "w": 2, "h": 2, "c": 2, "r": 4 },
                                                                                     { "w": 3, "h": 4, "c": 4, "r": 4 },
                                                                                     { "w": 3, "h": 4, "c": 7, "r": 4 },
                                                                                     { "w": 2, "h": 2, "c": 10, "r": 5 },
                                                                                     { "w": 4, "h": 2, "c": 11, "r": 6 }
                                                                                   ],
                                                      "thumbnailGutterWidth":      0,
                                                      "thumbnailGutterHeight":     0,
                                                      "thumbnailBorderHorizontal": 5,
                                                      "thumbnailBorderVertical":   5,
                                                      "galleryMaxRows":            1,
                                                      "galleryDisplayMode":        "rows",
                                                      "galleryDisplayMode":        "pagination",
                                                      "thumbnailLabel":            { "display" : false }
                                                    }'>

                <!-- gallery content -->

                @foreach (var item in Model.ServicePhotos)
                {

                    var thumbnailHref = Path.GetFileNameWithoutExtension(item.FileName) + "_thumbnail" + Path.GetExtension(item.FileName);
                    <a href="/Images/ServiceImages/@item.FileName"
                       data-ngThumb="/Images/ServiceImages/@thumbnailHref"> @item.Title </a>
                }

            </div>
            <!-- ### end of the gallery definition ### -->

        </div>


    </section>

    @Html.Partial("_ContactUsPartial");

</main>

@section scripts{
    <script>
        $(".navbar").addClass("navbarBackgroundFix");


        $('.navbar-link-href').each(function () {
            $(this).attr('href', "/" + $(this).attr('href'));
        });

    </script>
}